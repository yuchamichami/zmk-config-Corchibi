#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/zmk/input_transform.h>
#include <dt-bindings/input/input-event-codes.h>
#include <dt-bindings/zmk/bt.h>
#include <input/processors.dtsi>
#include <physical_layouts.dtsi>

#include <input/processors/report_rate_limit.dtsi>

&uicr {
    nfct-pins-as-gpios;
};

/ {
    chosen {
        zmk,physical-layout = &default_layout;
        zmk,kscan = &kscan0;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-charlieplex";
        wakeup-source;
    };

    split_inputs {
        #address-cells = <1>;
        #size-cells = <0>;

        trackball_split_L: trackball_split_L@0 {
            compatible = "zmk,input-split";
            reg = <0>;
        };
    };

    trackball_listener_L: trackball_listener_L {
        compatible = "zmk,input-listener";
        /* 無効になっていたため、okayに変更して起動させます */
        status = "okay";
        device = <&trackball_split_L>;
        input-processors =
            /* 間引き処理は受信側（セントラル）で行います */
            <&zip_report_rate_limit 8>,
            <&zip_xy_transform (INPUT_TRANSFORM_Y_INVERT)>,
            <&zip_xy_to_scroll_mapper>,
            <&zip_scroll_scaler 1 16>;
    };

    trackball_listener_R: trackball_listener_R {
        compatible = "zmk,input-listener";
        status = "disabled";
        input-processors = <&zip_report_rate_limit 8>;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <6>;
        map = <
            /* Left (25 keys) */
            RC(0,1) RC(0,2) RC(0,3) RC(0,4)
            RC(1,0) RC(1,2) RC(1,3) RC(1,4)
            RC(2,0) RC(2,1) RC(2,3) RC(2,4)
            RC(3,0) RC(3,1) RC(3,2) RC(3,4)
            RC(4,0) RC(4,1) RC(4,2) RC(4,3)
            RC(5,0) RC(5,1) RC(5,2) RC(5,3) RC(5,4)

            /* Right (25 keys) */
            RC(0,7) RC(0,8) RC(0,9) RC(0,10)
            RC(1,6) RC(1,8) RC(1,9) RC(1,10)
            RC(2,6) RC(2,7) RC(2,9) RC(2,10)
            RC(3,6) RC(3,7) RC(3,8) RC(3,10)
            RC(4,6) RC(4,7) RC(4,8) RC(4,9)
            RC(5,6) RC(5,7) RC(5,8) RC(5,9) RC(5,10)
        >;
    };

    default_layout: default_layout {
        compatible = "zmk,physical-layout";
        display-name = "Default";
        transform = <&default_transform>;
        kscan = <&kscan0>;

        keys
            /* Left (25 items) */
            = <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            /* Right (25 items) */
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            , <&key_physical_attrs 100 100 0 0 0 0 0>
            ;
    };
};